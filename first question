// INTEGER BREAK
#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int breakint(int n)
{
   /*if(n==2){
        return 1;
    }
    int sum=0;
    int m=1;
    int n1=n;
    while(sum!=n)
    {
    int d=n1/3;
     sum+=d;
     m*=d;
    n1--;
    }
    return m;*/
    vector<int>dp(100);

    dp[1]=1;
    dp[2]=1;
    dp[3]=2;
    int p;
    for(int i=4;i<=n;i++)
    {
        int num=i;
        for(int j=1;j<=num;j++)
        {
            int x=j;
            int y=num-x;;
        dp[i]=max({dp[i],x*y,dp[y]*x,dp[x]*y,dp[x]*dp[y]});
        }
    }
    return dp[n];
}
int main()
{
    int n;
    cin>>n;
    cout<<breakint(n);
    return 0;
}
